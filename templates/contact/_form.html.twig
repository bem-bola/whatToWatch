{{ form_start(form, {'attr': {'class': 'formNewContact'}}) }}

    <div class="bg-dark1 py-1" id="containerFormContact">

        <div class="d-flex justify-content-center containerInput"> 
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="d-flex justify-content-center containerInput"> 
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            
        </div>
        
        <div class="d-flex justify-content-center containerInput"> 
            {{ form_row(form.objet, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="d-flex justify-content-center containerInput"> 
            {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_widget(form) }}
        <div class="d-flex justify-content-center"> 
            <button class="btn bg-logo my-2">{{ button_label|default('Envoyer') }}</button>
        </div>

    </div>
    
{{ form_end(form) }}
