{{ form_start(form, {'attr': {'class': 'formNew d-flex justify-content-center'}}) }}

    <div class="bg-dark1 py-1" id="containerFormNew">

        <div class="d-flex justify-content-center"> 

            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.nbSaison, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
           

        </div>
     
        <div class="d-flex justify-content-center"> 

            {{ form_row(form.realisateur, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.acteur, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.plateforme, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="d-flex justify-content-center"> 
            {{ form_row(form.date_sortieAt, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.duree, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.origine, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="d-flex justify-content-center"> 
        
            {{ form_row(form.imgAffiche, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.imgHeader, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="d-flex justify-content-center"> 

            {{ form_row(form.genres, {'attr': {'class': ''}}) }}
        
        </div>

        <div class="d-flex justify-content-center"> 
            {{ form_row(form.bande_annonce, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.lien_redirection, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="d-flex"> 
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        {{ form_widget(form) }}
        <div class="d-flex justify-content-center"> 
            <button class="btn btn-secondary text-center">{{ button_label|default('Enregistrer') }}</button>
        </div>

    </div>
{{ form_end(form) }}
